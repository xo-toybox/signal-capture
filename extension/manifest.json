{
  "manifest_version": 3,
  "name": "Signal Capture",
  "version": "1.0.0",
  "description": "Capture all open tabs as signals",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://signal-capture.vercel.app/*"
  ],
  "action": {
    "default_title": "Capture All Tabs",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
